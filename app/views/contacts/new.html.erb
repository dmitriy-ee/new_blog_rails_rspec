<h1><%= t('contacts.contact_us') %></h1>


<%= form_for :contacts, url: contacts_path do |f| %>
	
	<% if @contacts && @contacts.errors.any? %>
	<p>
		<ul>
		<% @contacts.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
	</p>
    <% end %>

	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :message %><br />
		<%= f.text_field :message %>
	</p>

	<p>
		<%= f.submit 'Send message' %><br />
	</p>

<% end %>