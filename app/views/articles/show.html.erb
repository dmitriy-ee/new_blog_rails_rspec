<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<h2>Comments</h2>

<% @article.comments.each do |comment| %>
	<i><%= comment.author %> said:</i><br />
	<%= comment.body %>
<%end%>

<h2>Add comments</h2>

<%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_field :body %>
	</p>

	<p>
		<%= f.submit %><br />
	</p>

<% end %>