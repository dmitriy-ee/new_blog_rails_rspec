<h2>List of articles:</h2>
<% @articles.each do |article| %>
<h4>
	<%= article.title %>
</h4>
<p>
	<%= article.text %>
</p>
<p>
	<%= link_to 'Show', article_path(article) %> |
	<%= link_to 'Edit', edit_article_path(article) %> |
	<%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<hr />
<% end %>
